// 2 task


#include <iostream>

using namespace std;


int main()
{
    setlocale(LC_ALL, "Russian");

    double x, y;

    cout << "Введите координаты точки (x, y) " << endl;
    cin >> x >> y;

    if ((y>0) && (y > 4 - x*x) && (y > x* x - 2))
    {
        cout <<"A"<< endl;
    }

    else if ((x<0) && (y>=0) && (y<= 4 - x * x) && (y<= x*x - 2))
    {
        cout << "B" << endl;
    }

    else if ((x<=0) && (y>=0) && (y <= 4 - x*x))
    {
        cout << "C" << endl;
    }

    else if ((x<0) && (y < 0) && (y >= x*x - 2))
    {
        cout << "D" << endl;
    }

    else if ((x>=0) && (y >= 0) && (y <= 4 - x*x) && (y >= x * x - 2))
    {
        cout << "E" << endl;
    }

    else if ((x>=0) && (y <= 0) && (y >= x*x - 2))
    {
        cout << "F" << endl;
    }

    else if ((x>0) && (y >= 0) && (y < x*x - 2) && (y <= 4 - x * x))
    {
        cout << "G" << endl;
    }

    else if ((y <= 0) && (y < x*x - 2) && (y <= 4 - x * x))
    {
        cout << "H" << endl;
    }



    return 0;
    system ("pause");
}



