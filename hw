task 3

#include <iostream>

using namespace std;


int main()
{
    setlocale(LC_ALL, "Russian");

    double x, y;

    cout << "Введите координаты точки (x, y) " << endl;
    cin >> x >> y;

    if ((x < 0) && (y < 2 - x) && (y < x*x) && (y >= 0))
    {
        cout << "A" << endl;
    }

    else if ((x < 0) && (y > 2 - x) && (y < x*x) && (y > 0))
    {
        cout << "B" << endl;
    }

    else if ((y <= 2 - x) && (y >= x*x))
    {
        cout << "C" << endl;
    }

    else if ((y <= 2 - x) && (y <= x*x) && (y >= 0) && (x > 0))
    {
        cout << "D" << endl;
    }

    else if ((y >= 2 - x) && (y >= x*x))
    {
        cout << "E" << endl;
    }

    else if ((y < x * x) && (y > 2-x) && (x > 0) && (y > 0))
    {
        cout << "F" << endl;

    }

    else if ((y < 0) && (y < 2 - x))
    {
        cout << "G" << endl;
    }

    else if ((y < x * x) && (y > 2-x) && (x > 0) && (y < 0))
    {
        cout << "H" << endl;
    }


    return 0;
    system ("pause");
}




