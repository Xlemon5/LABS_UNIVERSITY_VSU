//1 task

#include <iostream>

using namespace std;


int main()
{
    setlocale(LC_ALL, "Russian");

    double x, y;

    cout << "Введите координаты точки (x, y) " << endl;
    cin >> x >> y;

    if (x*x + y*y <= 1)
    {
        cout << "Принадлежит А " <<endl;
    }

    else if ((x*x + y*y >= 1) && (x>=0) && (x<=1) && (y>0) && (y<=1))
    {
        cout << "Принадлежит E " <<endl;
    }

    else if ((x>1) && (y <= 1))
    {
        cout << "Принадлежит F " <<endl;
    }

    else if ((x > 1) && (y > 1))
    {
        cout << "Принадлежит D " <<endl;
    }

    else if ((x < 1) && (y > 1))
    {
        cout << "Принадлежит C " <<endl;
    }

    else if ((x*x + y*y > 1) && (x < 1) && (y < 1))
    {
        cout << "Принадлежит В" << endl;
    }

    return 0;
    system ("pause");
}

