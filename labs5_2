#include <iostream>
#include <cmath>

using namespace std;

int main()
{
    int N, F = 1, k = 1;

    cout << "Введите число N: "<< "\n";
    cin >> N;

    if (N > 0)
    {
        if (N != 0 || N != 1) 
        {
            do
            {
                F *= k++;
            }
            while (k <= N);
            cout <<"N = " << N <<"\n";
            cout <<"F = " << F << "\n";    
        }

        else 

        {
            cout <<"N = " << N <<"\n";
            cout <<"F = " << F << "\n";
        }

    }

    else
    {
        cout<<"Ошибка: N < 0"<<"\n";
    }

    return 0;
    system("pause");
}
