#include <iostream>
#include "windows.h"
using namespace std;

int main() {
    
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    
    unsigned char sex;
    int branch, sex_int;

    cout << "Введите пол (М/Ж)" << endl;

    cin >> sex;
    
    sex_int = int(sex);

    switch (sex_int)

    {
        case 204:

            cout << "Владимир, Павел, Сергей, Илья, Александр и т.д. \n" << endl;
            branch = 1;
            break;
            
        case 236:

            cout << "Владимир, Павел, Сергей, Илья, Александр и т.д. \n" << endl;
            branch = 2;
            break;

        case 198:

            cout << "Мария, Елена, Людмила, Любовь и т.д. \n" << endl;
            branch = 3;
            break;
        
        case 230:

            cout << "Мария, Елена, Людмила, Любовь и т.д. \n" << endl;
            branch = 4;
            break;

        default:

            cout << "Введены не корректные данные \n";
            branch = 5;
            break;
    }

    cout << "Ветка: " << branch;

    return 0;

}
